<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar_layout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1BCC87">
            <com.gospell.stall.ui.view.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="20dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/account_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_all"
                android:drawableLeft="@drawable/ic_login_user"
                android:drawablePadding="20dp"
                android:hint="请输入账号"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/nick_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_all"
                android:drawableLeft="@drawable/ic_login_user"
                android:drawablePadding="20dp"
                android:hint="昵称"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/password_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_all"
                android:drawableLeft="@drawable/ic_login_password"
                android:drawablePadding="20dp"
                android:inputType="numberPassword"
                android:hint="请输入密码"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/password_again_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_all"
                android:drawableLeft="@drawable/ic_login_password"
                android:drawablePadding="20dp"
                android:inputType="numberPassword"
                android:hint="再输入一次密码"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="注册"
                android:textColor="#fff"
                android:background="#1BCC87"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>