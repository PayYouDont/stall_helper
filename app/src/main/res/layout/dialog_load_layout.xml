<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99000000"
    android:padding="20dp">
    <TextView
        android:id="@+id/load_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="标题"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fff"/>
    <LinearLayout
        android:id="@+id/load_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:minHeight="80dp"
        android:gravity="center"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/load_result_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/load_result_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="加载成功"
                android:visibility="gone"/>
        </ScrollView>
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/load_view"
            style="@style/SpinKitView.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/load_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="加载中..."
            android:textColor="#fff"
            android:textSize="20dp" />
        <include
            layout="@layout/button_group_horizontal"
            android:id="@+id/load_result_btn_layout"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
